  "scripts": {
    "init": "heroku git:remote -a my-app -r prod && heroku git:remote -a my-app-staging -r staging",
    "optimize": "imageOptim -d static/images",
    "preversion": "if [ $(git diff --name-only $(git describe --abbrev=0 --tags)..HEAD static/images/ | wc -c) -ne 0 ]; then npm run optimize; git add --all static/images; fi",
    "start": "node build/server.js",
    "start:prod": "time npm run --silent build && date && cross-env NODE_ENV=production npm run --silent start",
    "postinstall": "npm run build",
    "build": "rimraf build && cross-env NODE_ENV=production webpack --config webpack.web.js",
    "build:browser": "webpack --config webpack.browser.js",
    "build:server": "webpack --config webpack.server.js",
    "deploy:prod": "heroku pipelines:promote -a my-app-staging",
    "lsp": "heroku releases -a my-app",
    "lss": "heroku releases -a my-app-staging",
    "dev": "yarn --ignore-scripts && cross-env DEBUG=my-app* NODE_ENV=development nodemon -e css,js,json -w postcss.config.js -w server -w src/lib/react.routes.js -w src/styles -w 'webpack.*.js' -i *~ -i build -i .eslintcache -x node server/dev.index.js",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "eslint": "eslint --ignore-path .gitignore flow src server",
    "lint": "npm run eslint -- --rule 'flowtype-errors/show-errors: 0'",
    "test": "npm run --silent eslint && npm run --silent test:tape | faucet",
    "test:tape": "cross-env NODE_ENV=test babel-node test.js",
    "watch": "nodemon -i .eslintcache -x npm run --silent test",
    "watch:lint": "nodemon -w . -w .flowconfig -i .eslintcache -x npm run --silent eslint --cache",
    "watch:test": "nodemon -w . -i .eslintcache -x npm run --silent test:tape"
  }
}
